# Mecurial init, clone and user set aliases
alias hgin='hg init'
alias hgcon='hg clone'
alias hgb='hg branch'
alias hgbs='hg branches'

# Mecurial commit aliases
alias hgc='hg commit'
alias hgca='hg commit -A'
alias hgcm='hg commit -m'
alias hgcam='hg commit -Am'

# Mecurial Log aliases
alias hgst='hg status'
alias hgsta='hg status -A'
alias hgstm='hg status -m'
alias hgstr='hg status -r'
alias hgstd='hg status -d'
alias hgstu='hg status -u'
alias hgsti='hg status -i'
alias hglg='hg log'

# Mecurial push and pull aliases
alias hgup='hg push'
alias hgupf='hg push --force'
alias hgdl='hg pull'
alias hgdlu='hg pull --update'
alias hgfh='hg fetch'
