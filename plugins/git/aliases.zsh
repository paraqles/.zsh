# Git init, clone and user set aliases
alias gin='git init'
alias ginb='git init --bare'
alias gcon='git clone'
alias gusr='git config user.name'
alias geml='git config user.email'

# Git add and commit aliases
alias gad='git add'
alias gada='git add --all'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gcam='git commit -am'

# Git Log aliases
alias gst='git status'
alias glg='git log'
alias glgf='git log --full-history'
alias glgp='git log --pretty=email'

# Git push and pull aliases
alias gup='git push'
alias gupf='git push --force'
alias gupa='git push --all'
alias gupaf='git push --all --force'
alias gupm='git push --mirror'
alias gupmf='git push --mirror --force'
alias gupt='git push --tags'
alias guptf='git push --tags --force'
alias gdl='git pull'
alias gdly='git pull --recurse-submodules=yes'
alias gdln='git pull --no-recurse-submodules=yes'
alias gfh='git fetch'
